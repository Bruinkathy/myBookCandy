@model Category

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Update Category:</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All" class="text-danger"></div>*@
		<div class="row mb-4">
			<div class="col-8">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="col-3">
				<label asp-for="DisplayOrder"></label>
				<input asp-for="DisplayOrder" class="form-control" />
				<span asp-validation-for="DisplayOrder" class="text-danger"></span>
			</div>
		</div>
		<a class="btn btn-secondary width150" asp-area="Admin" asp-controller="Category" asp-action="Index" title="Back"><i class="bi bi-arrow-left-circle i20">&nbsp;</i>Back</a>
		<button type="submit" class="btn btn-primary width150"><i class="bi bi-plus-circle i20" title="Update"></i>&nbsp;Update</button>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
			}