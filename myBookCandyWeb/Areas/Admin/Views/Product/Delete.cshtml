@model myBookCandy.Models.ViewModels.ProductVM

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <input asp-for="Product.ImageUrl" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Delete Product:</h2>
            <hr />
        </div>
        <div class="row mb-4">
            <div class="col-md-12 col-lg-8 row">
                <div class="col-12 mb-3">
                    <label asp-for="Product.Title"></label>
                    <input asp-for="Product.Title" class="form-control" disabled />
                </div>
                <div class="col-12 mb-3">
                    <label asp-for="Product.Author"></label>
                    <input asp-for="Product.Author" class="form-control" disabled />
                </div>
                <div class="col-6 mb-3">
                    <label asp-for="Product.CategoryId"></label>
                    <input asp-for="Product.Category.Name" disabled class="form-control" />
                </div>

                <div class="col-6 mb-3">
                    <label asp-for="Product.CoverTypeId"></label>
                    <input asp-for="Product.CoverType.Name" disabled class="form-control" />
                </div>
                <div class="col-8 mb-3">
                    <label asp-for="Product.ISBN"></label>
                    <input asp-for="Product.ISBN" class="form-control" disabled />
                </div>
                <div class="col-12 mb-3">
                    <label asp-for="Product.Description"></label>
                    <textarea asp-for="Product.Description" rows="3" class="form-control" disabled></textarea>
                </div>
                <div class="col-6 mb-3">
                    <label asp-for="Product.Price"></label>
                    <input asp-for="Product.Price" class="form-control" disabled />
                </div>
                <div class="col-6 mb-3">
                    <label asp-for="Product.ListPrice"></label>
                    <input asp-for="Product.ListPrice" class="form-control" disabled />
                </div>
                <div class="col-6 mb-3">
                    <label asp-for="Product.Price50"></label>
                    <input asp-for="Product.Price50" class="form-control" disabled />
                </div>
                <div class="col-6 mb-3">
                    <label asp-for="Product.Price100"></label>
                    <input asp-for="Product.Price100" class="form-control" disabled />
                </div>
            </div>
            <div class="col-md-12 col-lg-4  mb-3">
                <div id="img-preview" style="width: 80%; height: auto; margin: 0 auto; margin-top: 25px;">
                    @if (Model.Product.Id != 0)
                    {
                        <img src="@Model.Product.ImageUrl" id="preview" class="image-preview-image" style="width: 100%; height: auto;" />
                    }
                    else
                    {
                        <img src="~/images/NoImage.jpeg" alt="Image Preview" id="preview" style="width: 100%; height: auto;" />
                    }
                </div>
            </div>
        </div>
        <div class="col-12">
            @if (Model.Product.Id != 0) {
                <a class="btn btn-secondary width150" asp-area="Admin" asp-controller="Product" asp-action="Index" title="Back"><i class="bi bi-arrow-left-circle i20">&nbsp;</i>Back</a>
                <button type="submit" class="btn btn-danger width150 text-white" title="Delete"><i class="bi bi-x-square i20 text-white"></i>&nbsp;Delete</button>
            }
            </div>
        </div>
    </form>